{
    "name": "hinotora/short-link-api",
    "description": "REST API for making short links",
    "require": {
        "ext-pdo": "*",
        "slim/slim": "^4.7",
        "slim/psr7": "^1.3",
        "vlucas/phpdotenv": "^5.3",
        "php-di/php-di": "^6.3",
        "php-di/slim-bridge": "^3.1",
        "robmorgan/phinx": "^0.12.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "files": [
            "app/helpers.php"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8000 -t public/",
        "migrate": "vendor/bin/phinx migrate",
        "test": "phpunit"
    }
}
